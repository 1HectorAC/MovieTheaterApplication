@model List<MovieTheaterApplication.Models.ViewModels.ShowingSelectionViewModel>

@{
    ViewData["Title"] = "ShowingSelection";
}

<h1 style="text-align:center">Showing Selection</h1>
<hr />
<h4 style="text-align:center">Movie: @ViewBag.MovieTitle </h4>
<hr/>

<div class="centerPanelParent">

<div class="basicPanel">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Auditorium
                </th>
                <th>
                    Showing Time
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AuditoriumName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowingTime)
                </td>
                <td>      
                    <a asp-controller="Home" asp-action="SeatSelection" asp-route-ShowingId="@item.Id">Select Seat</a>           
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

</div>