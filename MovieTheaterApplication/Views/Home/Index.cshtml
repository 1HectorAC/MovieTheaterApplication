@model List<Movie>
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>Select Movies:</h1>
    <hr/>
        @foreach (var movie in Model)
        {

        <a asp-controller="Home" asp-action="ShowingSelection" asp-route-MovieId="@movie.Id" style="text-decoration:none; color:inherit; display:block">
            <div class="row" style="background-color:#88BBFF; margin-bottom:5px; border-radius: 10px; padding:10px; display:flex; align-content:center;">
                <div class="col-md-2 ">
                    <p style="width:150px;height:150px; background-color:white; border-radius:10px; text-align:center; align-content:center; margin: 0">Image here</p>

                </div>
                <div class="col-md-10" style="align-content:center">
                    <h4>@movie.Title</h4>
                    <hr/>
                        <p><i>@movie.Description</i></p>
                </div>
            </div>
        </a>
        
        }
    

</div>
